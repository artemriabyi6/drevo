generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Order {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String
  email     String?
  address   String
  items     Json
  total     Float
  createdAt DateTime @default(now()) @map("created_at")
}